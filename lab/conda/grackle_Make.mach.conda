#=======================================================================
#
# FILE:        Make.mach.conda
#
# DESCRIPTION: Makefile settings for conda environment
# NOTES:       Make sure the following packages are installed:
#              $ conda install gcc hdf5 libtool
#
# AUTHOR:      Bili Dong
# DATE:        2018-06-19
#
#=======================================================================

MACH_TEXT  = conda
MACH_VALID = 0
MACH_FILE  = Make.mach.conda

#-----------------------------------------------------------------------
# Install paths (local variables)
#-----------------------------------------------------------------------

LOCAL_HDF5_INSTALL = $(CONDA_PREFIX)
LOCAL_FC_INSTALL   = $(CONDA_PREFIX)

#-----------------------------------------------------------------------
# Compiler settings
#-----------------------------------------------------------------------

MACH_CPP       = $(CONDA_PREFIX)/bin/cpp

MACH_CC_NOMPI  = $(CONDA_PREFIX)/bin/gcc
MACH_CXX_NOMPI = $(CONDA_PREFIX)/bin/g++
MACH_FC_NOMPI  = $(CONDA_PREFIX)/bin/gfortran
MACH_F90_NOMPI = $(CONDA_PREFIX)/bin/gfortran
MACH_LD_NOMPI  = $(CONDA_PREFIX)/bin/gcc

MACH_LIBTOOL   = $(CONDA_PREFIX)/bin/libtool

#-----------------------------------------------------------------------
# Machine-dependent defines
#-----------------------------------------------------------------------

MACH_DEFINES   = -DLINUX -DH5_USE_16_API

#-----------------------------------------------------------------------
# Compiler flag settings
#-----------------------------------------------------------------------

MACH_CPPFLAGS = -P -traditional
MACH_CFLAGS   =
MACH_CXXFLAGS =
MACH_FFLAGS   = -fno-second-underscore -m64
MACH_F90FLAGS = -fno-second-underscore -m64
MACH_LDFLAGS  =

#-----------------------------------------------------------------------
# Optimization flags
#-----------------------------------------------------------------------

MACH_OPT_WARN        = -Wall -g
MACH_OPT_DEBUG       = -g
MACH_OPT_HIGH        = -O2
MACH_OPT_AGGRESSIVE  = -O3

#-----------------------------------------------------------------------
# Includes
#-----------------------------------------------------------------------

LOCAL_INCLUDES_HDF5   = -I$(LOCAL_HDF5_INSTALL)/include

MACH_INCLUDES         = $(LOCAL_INCLUDES_HDF5)

#-----------------------------------------------------------------------
# Libraries
#-----------------------------------------------------------------------

LOCAL_LIBS_HDF5   = -L$(LOCAL_HDF5_INSTALL)/lib -lhdf5
LOCAL_LIBS_MACH   = -L$(LOCAL_FC_INSTALL)/lib -lgfortran

MACH_LIBS         = $(LOCAL_LIBS_HDF5) $(LOCAL_LIBS_MACH)

#-----------------------------------------------------------------------
# Installation
#-----------------------------------------------------------------------

MACH_INSTALL_PREFIX = $(CONDA_PREFIX)
MACH_INSTALL_LIB_DIR =
MACH_INSTALL_INCLUDE_DIR =
