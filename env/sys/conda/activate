echo "conda" > "$LOCAL_SYS_FILE"

export LOCAL_CC=gcc
export LOCAL_CXX=g++
export LOCAL_FC=gfortran
export LOCAL_LIB="-L$LOCAL_PREFIX/lib -L$LOCAL_PREFIX/lib"

export OMPI_CC=gcc
export OMPI_CXX=g++
export OMPI_FC=gfortran
export LOCAL_MPICC=mpicc
export LOCAL_MPICXX=mpicxx
export LOCAL_MPIFC=mpifort

export LOCAL_CFLAGS=-O3
export LOCAL_LDFLAGS=-Wl,-rpath,"$LOCAL_CONDA_PREFIX/lib"
export LOCAL_MPIFLAGS=
export LOCAL_OMPFLAGS=-fopenmp

export LOCAL_CODES="grackle gizmo music"
export LOCAL_FFTW2_INC="-I$LOCAL_CONDA_PREFIX/include"
export LOCAL_FFTW2_LIB="-L$LOCAL_CONDA_PREFIX/lib"
export LOCAL_FFTW3_INC="-I$LOCAL_CONDA_PREFIX/include"
export LOCAL_FFTW3_LIB="-L$LOCAL_CONDA_PREFIX/lib"
export LOCAL_GSL_INC="-I$LOCAL_CONDA_PREFIX/include"
export LOCAL_GSL_LIB="-L$LOCAL_CONDA_PREFIX/lib -lgsl -lgslcblas"
export LOCAL_HDF5_INC="-I$LOCAL_CONDA_PREFIX/include"
export LOCAL_HDF5_LIB="-L$LOCAL_CONDA_PREFIX/lib -lhdf5 -lz"
