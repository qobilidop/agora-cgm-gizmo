#=======================================================================
#
# FILE:        Make.mach.local
#
# DESCRIPTION: Makefile settings for local env
#
#=======================================================================

MACH_TEXT  = Local
MACH_VALID = 0
MACH_FILE  = Make.mach.local

#-----------------------------------------------------------------------
# Compiler settings
#-----------------------------------------------------------------------

MACH_CPP       = cpp
MACH_CC_NOMPI  = $(LOCAL_CC)
MACH_CXX_NOMPI = $(LOCAL_CXX)
MACH_FC_NOMPI  = $(LOCAL_FC)
MACH_F90_NOMPI = $(LOCAL_FC)
MACH_LD_NOMPI  = $(LOCAL_CC)
MACH_LIBTOOL   = libtool

#-----------------------------------------------------------------------
# Machine-dependent defines
#-----------------------------------------------------------------------

MACH_DEFINES   = -DLINUX -DH5_USE_16_API

#-----------------------------------------------------------------------
# Compiler flag settings
#-----------------------------------------------------------------------

MACH_CPPFLAGS = -P -traditional
MACH_CFLAGS   = $(LOCAL_CFLAGS)
MACH_CXXFLAGS = $(LOCAL_CFLAGS)
MACH_FFLAGS   =
MACH_F90FLAGS =
MACH_LDFLAGS  =

#-----------------------------------------------------------------------
# Optimization flags
#-----------------------------------------------------------------------

MACH_OPT_WARN        = -Wall -g
MACH_OPT_DEBUG       = -g
MACH_OPT_HIGH        = -O2
MACH_OPT_AGGRESSIVE  = -O3

#-----------------------------------------------------------------------
# Includes
#-----------------------------------------------------------------------

MACH_INCLUDES = $(LOCAL_HDF5_INC)

#-----------------------------------------------------------------------
# Libraries
#-----------------------------------------------------------------------

MACH_LIBS     = $(LOCAL_HDF5_LIB) -lhdf5 -lz $(LOCAL_LDFLAGS) $(LOCAL_GRACKLE_LDFLAGS)

#-----------------------------------------------------------------------
# Installation
#-----------------------------------------------------------------------

MACH_INSTALL_PREFIX = $(LOCAL_PREFIX)
MACH_INSTALL_LIB_DIR =
MACH_INSTALL_INCLUDE_DIR =
