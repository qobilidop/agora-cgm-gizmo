#=======================================================================
#
# FILE:        Make.mach.local
#
# DESCRIPTION: Makefile settings for NERSC Edison
# NOTES:       Make sure the following modules are loaded:
#              $ module load intel cray-hdf5
#
#=======================================================================

MACH_TEXT  = Edison
MACH_VALID = 0
MACH_FILE  = Make.mach.local

#-----------------------------------------------------------------------
# Install paths (local variables)
#-----------------------------------------------------------------------

LOCAL_HDF5_INSTALL = $(HDF5_DIR)
LOCAL_FC_INSTALL   = $(INTEL_PATH)/linux/compiler/lib/intel64

#-----------------------------------------------------------------------
# Compiler settings
#-----------------------------------------------------------------------

MACH_CPP       = /usr/bin/cpp

MACH_CC_NOMPI  = icc
MACH_CXX_NOMPI = icpc
MACH_FC_NOMPI  = ifort
MACH_F90_NOMPI = ifort
MACH_LD_NOMPI  = icc

MACH_LIBTOOL   = libtool

#-----------------------------------------------------------------------
# Machine-dependent defines
#-----------------------------------------------------------------------

MACH_DEFINES   = -DLINUX -DH5_USE_16_API

#-----------------------------------------------------------------------
# Compiler flag settings
#-----------------------------------------------------------------------

MACH_CPPFLAGS = -P -traditional
MACH_CFLAGS   = -mp1 -prec_div -fp_port -align
MACH_CXXFLAGS = -mp1 -prec_div -fp_port -align
MACH_FFLAGS   =
MACH_F90FLAGS = -mp1 -prec_div -fp_port -align -save -zero
MACH_LDFLAGS  = -lifcore -lifport -lpthread -ldl

#-----------------------------------------------------------------------
# Optimization flags
#-----------------------------------------------------------------------

MACH_OPT_WARN        =
MACH_OPT_DEBUG       = -g -O0
MACH_OPT_HIGH        = -O2
MACH_OPT_AGGRESSIVE  = -O3

#-----------------------------------------------------------------------
# Includes
#-----------------------------------------------------------------------

LOCAL_INCLUDES_HDF5   = -I$(LOCAL_HDF5_INSTALL)/include

MACH_INCLUDES         = $(LOCAL_INCLUDES_HDF5)

#-----------------------------------------------------------------------
# Libraries
#-----------------------------------------------------------------------

LOCAL_LIBS_HDF5   = -L$(LOCAL_HDF5_INSTALL)/lib -lhdf5
LOCAL_LIBS_MACH   = -L$(LOCAL_FC_INSTALL)/lib -lm -lifcore -lifport

MACH_LIBS         = $(LOCAL_LIBS_HDF5) $(LOCAL_LIBS_MACH)

#-----------------------------------------------------------------------
# Installation
#-----------------------------------------------------------------------

MACH_INSTALL_PREFIX = $(LOCAL_PREFIX)
MACH_INSTALL_LIB_DIR =
MACH_INSTALL_INCLUDE_DIR =
